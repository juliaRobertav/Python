from random import randint

print('Início')

random = randint(0, 100)
chute = 0;
chances = 10;
while chute != random:
    chute = input('Chute um número primo entre 0 a 100: ')
    if chute.isnumeric():
        chute = int(chute)
        if chute == random:
            print('')
            print('Parabéns, você venceu! O número era {} .'.format(random))
            print('')
            break;
        else:
            print('')
            if chute > random:
                print('Você errou! Dica: É um número menor.')
            else:
                print('Você errou! Dica: É um número maior.')
            print('')
        if chances == 0:
            print('')
            print('Suas chances acabaram, você perdeu!')
            print('')
            break;

print('Fim do Jogo')
